@model AdminCRM.Model.Models.CompanyDetails.CompanySocialProfile

@{
    ViewBag.Title = "Update";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-title-box">
    <div class="container-fluid">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h4 class="page-title mb-1">Company Social Profile</h4>
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index")">Company Social Profile</a></li>
                    <li class="breadcrumb-item active">Update Company Social Profile</li>
                </ol>
            </div>
        </div>

    </div>
</div>

<div class="page-content-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <div class="float-right ml-2">
                            <a class="btn btn-sm btn-warning btn-flat margin" href="@Url.Action("Index")">Back to List</a>
                        </div>
                        <h4 class="header-title">social profile update Form</h4>
                        <p class="card-title-desc"></p>
                        @using (Html.BeginForm("Edit", "CompanySocialProfile", FormMethod.Post, new { @class = "needs-validation", novalidate = "novalidate", @autocomplete="off" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.HiddenFor(model => model.Id)
                            @Html.HiddenFor(model => model.CompanyId)
                            <div class="row">
                                <div class="col-md-4 mb-3">
                                    <label for="validationCustom03">Profile Name</label>
                                    @Html.TextBoxFor(m => m.ProfileName, new { @id = "validationCustom03", @class = "form-control", @placeholder = "Ex: Facebook", @maxLength = "30", @required = "required" })
                                    <div class="invalid-feedback">
                                        Please enter a profile name!
                                    </div>
                                </div>
                                <div class="col-md-8 mb-3">
                                    <label for="validationCustom03">Email</label>
                                    @Html.TextBoxFor(m => m.ProfileLink, new { @id = "validationCustom03", @class = "form-control", @placeholder = "Ex: http://facebook.com/yourlink", @maxLength = "80", @required = "required" })
                                    <div class="invalid-feedback">
                                        Please enter a profile link!
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-8 mb-3">
                                    <label for="validationCustom03">Welcome Text</label>
                                    @Html.TextBoxFor(m => m.ProfileIcon, new { @id = "validationCustom03", @class = "form-control", @placeholder = "Ex: facebook, twitter", @maxLength = "30", @required = "required" })
                                    <div class="invalid-feedback">
                                        Please enter a profile icon!
                                    </div>
                                </div>
                            </div>
                            <button class="btn btn-primary" type="submit">Update Data</button>

                        }
                    </div>
                </div>
            </div>
        </div>
        <!-- end row -->

    </div> <!-- container-fluid -->
</div>