@model AdminCRM.Model.Models.Sections.ServiceSingle
@{
    ViewBag.Title = "Update";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-title-box">
    <div class="container-fluid">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h4 class="page-title mb-1">Single Service</h4>
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index")">Single Service</a></li>
                    <li class="breadcrumb-item active">Update Single Service</li>
                </ol>
            </div>
        </div>

    </div>
</div>

<div class="page-content-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <div class="float-right ml-2">
                            <a class="btn btn-sm btn-warning btn-flat margin" href="@Url.Action("Index")">Back to List</a>
                        </div>
                        <h4 class="header-title">Single Service update Form</h4>
                        <p class="card-title-desc"></p>
                        @using (Html.BeginForm("Edit", "SingleService", FormMethod.Post, new { @class = "needs-validation", novalidate = "novalidate", @autocomplete = "off" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.HiddenFor(model => model.Id)
                            <div class="row">
                                <div class="col-md-8 mb-3">
                                    <label for="validationCustom03">Top title</label>
                                    @Html.TextBoxFor(m => m.Title, new { @id = "validationCustom03", @class = "form-control", @placeholder = "Enter top title", @maxLength = "50", @required = "required" })
                                    <div class="invalid-feedback">
                                        Please enter a title!
                                    </div>
                                </div>
                                <div class="col-md-4 mb-3">
                                    <label for="validationCustom03">Main Title</label>
                                    @Html.TextBoxFor(m => m.Icon, new { @id = "validationCustom03", @class = "form-control", @placeholder = "Ex: home", @maxLength = "80", @required = "required" })
                                    <div class="invalid-feedback">
                                        Please enter a icon name!
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-8 mb-3">
                                    <label for="validationCustom03">Description</label>
                                    @Html.TextAreaFor(m => m.Description, new { @id = "validationCustom03", @class = "form-control", @placeholder = "Enter description", @maxLength = "150", @required = "required", @rows = "5" })
                                    <div class="invalid-feedback">
                                        Please enter a description!
                                    </div>
                                </div>
                            </div>
                            <button class="btn btn-primary" type="submit">Update Data</button>

                        }
                    </div>
                </div>
            </div>
        </div>
        <!-- end row -->

    </div> <!-- container-fluid -->
</div>